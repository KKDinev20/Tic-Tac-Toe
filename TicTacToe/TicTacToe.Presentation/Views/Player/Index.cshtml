@{
ViewData["Title"] = "Create Players";
Layout = "_Layout";
}


<h2>Create Players</h2>

<form asp-action="CreatePlayers" asp-controller="Player" method="post">
    <div>
        <label>Player 1 Name:</label>
        <input type="text" name="player1Name" required />
    </div>
    <div>
        <label>Player 1 Color:</label>
        <input type="color" name="player1Color" required />
    </div>
    <div>
        <label>Player 2 Name:</label>
        <input type="text" name="player2Name" required />
    </div>
    <div>
        <label>Player 2 Color:</label>
        <input type="color" name="player2Color" required />
    </div>
    <button type="submit">Start Game</button>
</form>
