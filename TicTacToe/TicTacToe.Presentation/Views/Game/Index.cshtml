@{
ViewData["Title"] = "Start New Game - Tic Tac Toe";
}

<h2>Start New Game</h2>

<form method="post" asp-action="StartGame" asp-controller="Game">
    <div>
        <label for="player1Name">Player 1 Name</label>
        <input type="text" id="player1Name" name="player1Name" required />
    </div>
    <div>
        <label for="player1Color">Player 1 Color</label>
        <input type="color" id="player1Color" name="player1Color" required />
    </div>

    <div>
        <label for="player2Name">Player 2 Name</label>
        <input type="text" id="player2Name" name="player2Name" required />
    </div>
    <div>
        <label for="player2Color">Player 2 Color</label>
        <input type="color" id="player2Color" name="player2Color" required />
    </div>

    <button type="submit">Start Game</button>
</form>

<p>
    <a asp-action="GameHistory" asp-controller="Game">View Game History</a>
</p>
